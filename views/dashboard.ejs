<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <script
      src="https://kit.fontawesome.com/9ca9aa7819.js"
      crossorigin="anonymous"
    ></script>
    <style>
      /* Base styles */
      body {
        font-family: "Arial", sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        color: #333;
        min-height: 100vh;
        width: 100vw;
        box-sizing: border-box;
      }

      .container {
        height: 100%;
        padding: 20px;
        display: flex;
        flex-direction: column;
      }

      h1 {
        font-size: 2em;
        margin: 0 0 20px;
        color: #333;
        text-align: center;
        font-weight: 500;
        border-bottom: 2px solid #eee;
        padding-bottom: 10px;
        width: 100%;
      }

      .create-div {
        margin: 5px;
        display: flex;
        flex-direction: column;
        height: 150px;
      }

      .create-div a {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 10px;
        margin: 15px;
        width: 585px;
        color: #000;
        text-decoration: none;
        transition: color 0.3s;
        background-color: #fff;
        transition: all 0.3s;
      }

      .create-div a:hover {
        color: #007bff;
        border-color: #007bff;
        background-color: #007bff0d;
      }

      /* Form and button styles */
      .upload-form {
        width: 100%;
        display: flex;
        align-items: center;
      }

      input[type="file"] {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 10px;
        margin: 15px;
        width: 100%;
        max-width: 400px;
        background-color: #fff;
        font-size: 16px;
        transition: border-color 0.3s;
      }

      input[type="file"]:focus {
        border-color: #007bff;
      }

      .upload-form button {
        height: 40px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 500;
        transition: background-color 0.3s, transform 0.3s;
      }

      .upload-form button:hover {
        background-color: #0056b3;
        transform: scale(1.05);
      }

      /* List styles */
      ul {
        list-style: none;
        padding: 0;
        width: 45%;
      }

      ul li {
        margin: 10px 0;
        margin-left: 20px;
        display: flex;
        align-items: center;
      }

      ul li a {
        color: black;
        text-decoration: none;
        display: block;
        padding: 10px;
        background-color: #fff;
        border-radius: 4px;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
        font-size: 16px;
        transition: background-color 0.3s, box-shadow 0.3s;
        flex: 1;
      }

      ul li a:hover {
        color: #0056b3;
        background-color: #f1f1f1;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      }

      .copy-button {
        background-color: #28a745;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 5px 10px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 500;
        transition: background-color 0.3s;
        margin-left: 10px;
      }

      .copy-button:hover {
        background-color: #218838;
      }

      .delete-button {
        background-color: #dc3545;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 5px 10px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 500;
        transition: background-color 0.3s;
        margin-left: 10px;
      }

      .delete-button:hover {
        background-color: #c82333;
      }

      @media (max-width: 768px) {
        h1 {
          text-align: justify;
          font-size: 1.6em;
        }

        .upload-form {
          max-width: 100%;
        }

        input[type="file"] {
          max-width: 100%;
        }

        .upload-form button {
          width: 100%;
          padding: 12px;
        }

        ul {
          width: 100%;
        }
      }

      /* Dark mode styles */
      body.dark-mode {
        background-color: #333;
        color: #ccc;
      }

      body.dark-mode h1 {
        color: #ccc;
      }

      body.dark-mode .create-div a {
        border-color: #666;
        background-color: #555;
        color: #ccc;
      }
      body.dark-mode .create-div a:hover {
        color: white;
        background-color: #5555558e;
        border-color: #0057b3cb;
      }
      body.dark-mode input[type="file"] {
        border-color: #666;
        background-color: #555;
        color: #ccc;
      }

      body.dark-mode ul li a {
        text-decoration: none;
        color: white;
        background-color: #555;
      }

      body.dark-mode ul li a:hover {
        background-color: #444;
      }

      body.dark-mode .toggle-theme {
        color: white;
      }

      /* Dark mode theme switch button */
      .toggle-theme {
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        position: absolute;
        top: 15px;
        right: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <button class="toggle-theme" onclick="toggleTheme()">
        <i class="fa-regular fa-sun"></i> / <i class="fa-solid fa-moon"></i>
      </button>
      <h1>Dashboard</h1>
      <div class="create-div">
        <a href="/create">Create Markdown File</a>
        <form
          class="upload-form"
          action="/upload"
          method="POST"
          enctype="multipart/form-data"
        >
          <input type="file" name="markdown" accept=".md" required />
          <button type="submit">Upload Markdown</button>
        </form>
      </div>
      <hr />

      <hr />
      <h2>View Uploads</h2>
      <ul>
        <% files.forEach(function(file) { %>
        <li>
          <a href="/view/<%= file.shareableLink %>"><%= file.filename %></a>

          <button
            class="copy-button"
            onclick="copyLink('<%= file.shareableLink %>')"
          >
            Copy Link
          </button>

          <form
            class="delete-form"
            action="/delete/<%= file.shareableLink %>"
            method="POST"
            style="display: inline"
          >
            <button
              type="submit"
              class="delete-button"
              onclick="return confirm('Are you sure you want to delete this file?')"
            >
              Delete
            </button>
          </form>
        </li>
        <% }) %>
      </ul>
    </div>
    <script>
      function copyLink(shareableLink) {
        const url = `${window.location.origin}/view/${shareableLink}`;
        navigator.clipboard
          .writeText(url)
          .then(() => {
            alert("Link copied to clipboard!");
          })
          .catch((err) => {
            console.error("Failed to copy: ", err);
          });
      }
    </script>
    <script src="/scripts/themeSwitcher.js"></script>
  </body>
</html>
